%table.table.data_table.display#main_data_table
  %thead
    %tr
      %th Date Submitted
      %th Name
      %th Interview
      %th Staff Note
      %th Rejection Message
      %th Hired?
  %tbody
    - @records.each do |record|
      %tr
        %td{ data: { order: record.created_at.to_i } }
          = format_date_time record.created_at
        %td
          = link_to(record.user.proper_name, application_submission_path(record.id))
        %td
          - if record.interview.nil?
            not scheduled
          - elsif record.interview.completed
            Completed
            = format_date_time record.interview.scheduled
          - else
            = format_date_time record.interview.scheduled
        %td
          = record.staff_note
        %td 
          - if record.rejection_message.present?
            = record.rejection_message
          - else
            none
        %td
          - if record.interview.present?
            - if record.interview.hired?
              Yes
            - else
              No:
              = record.interview.interview_note
