%table.table.data_table.display
  %thead
    %tr
      %th.dt-left Date submitted
      %th Name
      %th Note
      %th Date to review
  %tbody
    - @saved.each do |record|
      %tr
        %td.dt-left{ data: { order: record.created_at.to_i } }
          = record.created_at.to_fs :long_with_time
        %td
          = link_to(record.user.proper_name, application_submission_path(record.id))
        %td
          = record.note_for_later
        %td
          = record.date_for_later.to_fs(:long) if record.date_for_later.present?
