.dashboard_partial
  - @departments.each do |department|
    .title_header.fs-26= department.name
    .partial_block
      - department.positions.each do |position|
        .position_label= position.name
        %ul
          - if @pending_interviews.key? position
            - @pending_interviews[position].each do |interview|
              %li= link_to interview.information(include_name: true),
                interview.application_submission
          - else
            No pending interviews
        %ul
          - if @saved_interviews[position].present?
            - count = @saved_interviews[position].count
            =link_to "View saved interviews for #{position.name} (#{count})",
              saved_interviews_position_path(position)
          - else
            No saved interviews
