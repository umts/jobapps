.dashboard_partial
  .container
    = form_tag past_applications_application_submissions_path,
      method: :get do
      %h5 List applications for
      .form-row
        = select_tag :department_ids,
          options_from_collection_for_select(@departments, :id, :name),
          class: 'dept-select m-2',
          id: 'past-applications-dept-select',
          multiple: true
      .form-row
        .form-group.col-md-6
          = label_tag :records_start_date, 'start date'
          = date_field_tag :records_start_date, '',
            required: true, class: 'form-control m-2'
        .form-group.col-md-6
          = label_tag :records_end_date, 'end date'
          = date_field_tag :records_end_date, '',
            required: true, class: 'form-control m-2'
      .form-row.mb-2
        = submit_tag 'List Applications', class: 'btn btn-primary'
