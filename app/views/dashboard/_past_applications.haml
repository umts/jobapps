.dashboard_partial
  = form_tag past_applications_application_submissions_path,
    method: :get, class: 'form-inline' do
    %h5 List applications for
    .form-group
      = select_tag :department_ids,
        options_from_collection_for_select(@departments, :id, :name),
        class: 'dept_select m-2',
        id: 'past-applications-dept-select',
        multiple: true
      = label_tag :records_start_date, 'between'
      = text_field_tag :records_start_date, '',
        required: true, class: 'form-control datepicker m-2'
      = label_tag :records_end_date, 'and'
      = text_field_tag :records_end_date, '',
        required: true, class: 'form-control datepicker m-2'
      = submit_tag 'List Applications', class: 'btn btn-primary'
