.date_range
  = form_tag eeo_data_application_records_path, method: :get do
    List EEO data for
    .note_item
      = select_tag :department_id,
      options_from_collection_for_select(@departments, :id, :name),
      class: 'dept_select', multiple: true
    between
    = text_field_tag :eeo_start_date, '', class: 'datepicker', required: true
    and
    = text_field_tag :eeo_end_date, '', class: 'datepicker', required: true
    = submit_tag 'List EEO data'
