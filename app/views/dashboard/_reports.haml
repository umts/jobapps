.date_range
  = form_tag csv_export_application_records_path, method: :get do
    Export records for
    .note_item
      = select_tag :department_ids,
      options_from_collection_for_select(@departments, :id, :name),
      class: 'dept_select', multiple: true
    between
    = text_field_tag :start_date, '', class: 'datepicker', required: true
    and
    = text_field_tag :end_date, '', class: 'datepicker', required: true
    = submit_tag 'Generate CSV'
